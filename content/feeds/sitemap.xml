<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/xsl/sitemap.xsl"?>
<urlset
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <url>
    <loc><%= site.config[:base_url] %></loc>
    <lastmod><%= item[:mtime].to_iso8601_time %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <% sorted_projects.each do |p| %>
    <url>
      <loc><%= site.config[:base_url] %><%= p.path %></loc>
      <lastmod><%= p.mtime.to_iso8601_time %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>

</urlset>